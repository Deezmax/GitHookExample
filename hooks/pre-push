#!/bin/bash

SCRIPT_PATH=".git/hooks/python_scripts/"

PYTHON=$(python --version)

if ! [[ "$PYTHON" == Python* ]]; then
  echo "Make sure python is installed"
  exit 1
fi

RESULTS[0]=null
HEAD=".git/HEAD"

python "$SCRIPT_PATH"check_branch.py $HEAD
RESULTS[0]=$?
printf "\n"

for res in "${RESULTS[@]}"; do
  if ! [ "$res" == 0 ]; then
    exit 1
  fi
done

exit 0
